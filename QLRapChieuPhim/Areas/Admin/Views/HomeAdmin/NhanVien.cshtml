@{
    ViewData["Title"] = "NhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using QLRapChieuPhim.Models;
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<NhanVien>

<div class="row">
    <div class="col-md-4">
        <form method="get" asp-action="NhanVien">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Tên nhân viên: </label>
                <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên nhân viên">
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Tìm nhân viên" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h1>Danh sách nhân viên</h1>

<p>
    <a asp-controller="admin" asp-action="ThemNhanVien">Thêm mới</a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-primary">
            <th>
                Mã nhân viên
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Tài khoản
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string cla = "table-success";
        }
        @foreach (var item in Model)
        {
            cla = "table-success";
            i += 1;
            if (i % 2 == 0)
            {
                cla = "table-warning";
            }
            <tr class="@cla">
                <td>
                    @Html.DisplayFor(modelItem => item.MaNv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hoten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <a asp-action="SuaNhanVien" asp-route-maNhanVien="@item.MaNv">Sửa</a> 
                    <a asp-action="XoaNhanVien" asp-route-maNhanVien="@item.MaNv">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="margin: 0 auto">
    @Html.PagedListPager(Model,page => Url.Action("NhanVien", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
    LiElementClasses = new List<String> {"page-item"},
    PageClasses = new List<String> {"page-link"}
    })
</div>