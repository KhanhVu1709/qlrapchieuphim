@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutRapChieuPhim.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Phim>

@foreach (var item in Model.Where(p => p.NgayKhoiChieu > DateTime.Now).Take(6))
{
    <div class="col-md-4 col-sm-4 col-xs-6 movie-item">
        <div class="article-movie-home">
            <img style="width: 300px;" src="website/images/template-show.jpg" data-src="@Url.Content("../film/images/" + item.AnhDaiDien)" class="lazy" />
            <a href="../RapChieuPhim/dat-ve/demon-slayer-to-the-swordsmith-village.html">
                <div class="decription-hover overlay">
                    <div class="movies-content">
                        <i class="icon-c13"></i>
                        <div class="group">
                            <div class="btn secondary-white"><a href="/home/muaves">mua vé</a></div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!--article.article-movie(style='background-image: url(#{item.imageLandscape})')-->
        <!--  figure-->
        <!--    figcaption.overlay-->
        <!--      .movies-content-->
        <!--        i(class='#{getIcon(item.age)}')-->
        <!--        .group-->
        <!--          a.btn.secondary-white(href='#{getUrlMovieDetail(item.slug)}') #{i18n('mua vé')}-->
        <div class="title-movie">
            <h4 class="upper-text">
                @if (@item.TenPhim.Length > 35)
                {
                    @item.TenPhim.Substring(0, 35) <text><br /></text>
                    @item.TenPhim.Substring(35)
                }
                else
                {
                    @item.TenPhim
                }
            </h4>
        </div>
    </div>
}
