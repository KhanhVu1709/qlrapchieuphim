@using X.PagedList.Mvc.Core;
@using QLRapChieuPhim.Models;
@model X.PagedList.IPagedList<Phim>

@foreach (var item in Model)
{
        <div class="col-md-3 col-sm-3 col-xs-6 watchmovie-item">
            <div class="article-watchmovie">
                <img src="@Url.Content("~/film/images/"+item.AnhDaiDien)">
                <a href="../RapChieuPhim/dat-ve/shazam-fury-of-the-gods">
                    <div class="decription-hover overlay">
                        <div class="movies-content">
                            <i class="icon-c13"></i>
                            <div class="group">
                            <div class="btn secondary-white"><a href="/home/muaves">mua vé</a></div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="title-watchmovie">
                <h4 class="upper-text">@item.TenPhim</h4>
            </div>
        </div>
}


<div class="product__pagination">
    @Html.PagedListPager(Model, page=>Url.Action("_LayoutPhimSapChieu", new{page=page}))
</div>